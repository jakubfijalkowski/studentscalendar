<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="DialogTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlockStyle}">
        <Setter Property="Foreground" Value="{StaticResource AccentColorBrush0}" />
        <Setter Property="FontSize" Value="{StaticResource SubHeaderFontSize}" />
    </Style>

    <Style x:Key="DialogMessageStyle" TargetType="TextBlock" BasedOn="{StaticResource DialogTitleStyle}">
        <Setter Property="FontSize" Value="18" />
    </Style>

</ResourceDictionary>