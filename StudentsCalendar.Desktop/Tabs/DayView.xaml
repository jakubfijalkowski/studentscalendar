<UserControl x:Class="StudentsCalendar.Desktop.Tabs.DayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:StudentsCalendar.Desktop.Controls">
    <ScrollViewer>
        <Grid Background="{StaticResource CalendarBackgroundBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource SlotsColumnGridLength}" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <controls:SlotsView Grid.Column="0" DataContext="{Binding DayLayout.Slots}" />
            <Border Grid.Column="1" Width="{StaticResource SeparatorSize}" Background="{StaticResource CalendarDaySeparatorBrush}" />
            <controls:DayView Grid.Column="2" DataContext="{Binding DayLayout}" />
        </Grid>
    </ScrollViewer>
</UserControl>
